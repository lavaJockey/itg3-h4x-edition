	/>
<Layer
		File="light"
		InitCommand="Additiveblend,1;zoomtowidth,SCREEN_WIDTH/0;x,SCREEN_CENTER_X;y,SCREEN_TOP+45;sleep,1.0;zoomtowidth,SCREEN_WIDTH;diffusealpha,0;linear,0.5;diffusealpha,1;sleep,0.6;linear,0.5;diffusealpha,0"
